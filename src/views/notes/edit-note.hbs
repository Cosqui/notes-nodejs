<div class="mt-4">
<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <label for="fortitle">Titulo</label>
                        <input type="text" class="form-control" name="title" id="title"  autocomplete="false" value="{{note.title}}">
                        
                    </div>
                    <div class="form-group">
                        <label for="fordescripcion">Descripcion</label>
                        <textarea type="text" class="form-control" name="descripcion" id="descripcion"  rows="6">{{note.descripcion}}</textarea>
                    </div>
                   
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i>Actualizar</button>
            </form>
        </div>
    </div>
</div>
</div>